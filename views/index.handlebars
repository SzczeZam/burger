<div class="row">
    <div class="col-6">
        <h2>Burgers to be Eaten.</h2>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block eaten=false}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-6">
        <h2>Burgers that have been Eaten.</h2>
        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block eaten=true}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="daBerg">ADD TO THE MENU:</label>
    <input type="text" id="daBerg">
  </div>



  <button type="submit">Add Burger</button>
</form>
</div>